<div id="breadcrumb" class="section">
    <div class="container">
        <!-- row -->
        <div class="row">
            @if (Model.Count > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <td>Mã sản phẩm</td>
                            <td>Tên sản phẩm</td>
                            <td>Ảnh sản phẩm</td>
                            <td>Số lượng</td>
                            <td>Đơn giá</td>
                            <td>Thành tiền</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Product.ID</td>
                                <td>@item.Product.Name</td>
                                <td><img src="@item.Product.Image" width="100" /></td>
                                <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                                <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                                <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                                <td><a href="#" data-id="@item.Product.ID" class="btndelete">Xóa</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button id="btnContinue" class="btn">Chọn sản phẩm</button>
                <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
                <button id="btnDeleteAll" class="btn">Xóa giỏ hàng</button>
                <button id="btnPayment" class="btn">Thanh toán</button>

            }
            else
              
            { <div class="text-center">
                  <i class="bi bi-cart-x" style="font-size: 20rem"></i>
            <br />
    <h4>Chưa có sản phẩm nào trong giỏ hàng</h4>
</div>
              

            }


            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
</div>

